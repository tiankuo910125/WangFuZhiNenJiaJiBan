<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <LinearLayout
                android:id="@+id/item_journal_day_layout"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_journal_day_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_journal_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/item_journal_day_layout"
                android:text="九月"
                android:textColor="#a6a6a6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_journal_week_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:text="星期五"
                android:textColor="#a6a6a6"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.demo.smarthome.base.utils.view_util.CustomListView
            android:id="@+id/item_journal_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp">

        </com.demo.smarthome.base.utils.view_util.CustomListView>
    </LinearLayout>
</LinearLayout>