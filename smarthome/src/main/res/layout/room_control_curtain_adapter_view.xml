<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/camera_bg">
        <ImageView
            android:id="@+id/curtian_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:background="@drawable/stic_curtain_nomal"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/curtain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_toRightOf="@id/curtian_icon"
            android:layout_centerVertical="true"
            android:text="窗帘1"
            android:textColor="@color/grown_black"
            android:textSize="10sp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.5dp">
            <CheckBox
                android:id="@+id/curtain_control_off"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/curtain_button_off"
                android:button="@null"/>

            <CheckBox
                android:id="@+id/curtain_control_on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/curtain_control_off"
                android:layout_marginRight="12dp"
                android:background="@drawable/curtain_button_on"
                android:button="@null"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>