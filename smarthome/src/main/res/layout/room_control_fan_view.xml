<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/room_fan_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.5dp"
                android:layout_marginBottom="22.5dp"
                android:background="@drawable/room_control_divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排风扇"
                android:textSize="14sp"
                android:textColor="@color/grown_black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/fan_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_fan_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/fan_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="排风扇"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/fan_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/switch_on"/>
                </RelativeLayout>

            </LinearLayout>
    </LinearLayout>
</RelativeLayout>