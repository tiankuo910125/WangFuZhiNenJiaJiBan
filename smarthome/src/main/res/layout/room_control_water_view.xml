<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/room_water_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.5dp"
                android:layout_marginBottom="22.5dp"
                android:background="@drawable/room_control_divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水电气"
                android:textSize="14sp"
                android:textColor="@color/grown_black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/water_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/water_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_water_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/water_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="总水阀"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/water_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/switch_on"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/gas_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/gas_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_gas_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gas_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="燃气总阀"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/gas_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/switch_off"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/heating_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/heating_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_water_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/heating_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="暖气总阀"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/heating_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/switch_on"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/water_purifier_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/water_purifier_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_water_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/water_purifier_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="净水阀"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/water_purifier_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/switch_on"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/elec_frame"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/camera_bg">
                    <ImageView
                        android:id="@+id/elec_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stic_elec_nomal"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/elec_icon"
                        android:layout_marginLeft="13.5dp"
                        android:text="电表余量"
                        android:textSize="10sp"
                        android:textColor="@color/grown_black"
                        android:layout_centerVertical="true"/>
                    <com.demo.smarthome.ui.base.LedCharactorView
                        android:id="@+id/energy_consumed_num"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/led_charactor_bg"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>